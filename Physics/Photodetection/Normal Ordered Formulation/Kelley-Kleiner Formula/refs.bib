number = {6},
pages = {3761--3774},
pmid = {9895956},
title = {{Input and output in damped quantum systems: Quantum stochastic differential equations and the master equation}},
url = {http://pra.aps.org/abstract/PRA/v31/i6/p3761{\_}1{\%}5Cnhttp://link.aps.org/doi/10.1103/PhysRevA.31.3761},
